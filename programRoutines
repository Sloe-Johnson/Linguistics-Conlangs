def findFile(dir, search) :
   if os.path.isdir(dir) :
      names = os.listdir(dir)
      for name in names :
         if os.path.isfile(dir + os.sep + name) :
            if search in name :
               print(dir + os.sep + name)
         else : # Ã¨ una cartella
            findFile(dir + os.sep + name, search)   
    
